---
import SocialIcons from "./SocialIcons.astro";
const today = new Date();
const activeIcons = ["github", "linkedin", "email"];
---

<footer>
  &copy; {today.getFullYear()} Adrian Pezzillo. All rights reserved.
  <SocialIcons icons={activeIcons} />
</footer>

<style>
  footer {
    padding: 2em 1em 6em 1em;
    /* padding-bottom: 1em; */
    background: radial-gradient(circle, var(--dark-radial-gradient)) no-repeat;
    color: rgb(var(--gray-light));
    text-align: center;
  }
</style>
