---
import SocialIcons from "./SocialIcons.astro";
const today = new Date();
const activeIcons = ["github"];
---

<footer>
  &copy; {today.getFullYear()} Adrian Pezzillo. All rights reserved.
  <SocialIcons icons={activeIcons} />
</footer>

<style>
  footer {
    padding: 2em 1em 6em 1em;
    /* background: linear-gradient(var(--gray-gradient)) no-repeat; */
    background: radial-gradient(circle, var(--dark-radial-gradient));
    color: rgb(var(--gray-light));
    text-align: center;
  }
</style>
